<!DOCTYPE html>
<html>

<head>
  {{>head}}
</head>

<body class="sub_page">

  <div class="hero_area">
    <!-- header section strats -->
    {{>navbar}}
    <!-- end header section -->
  </div>

 <!-- seller section -->
  <section class="seller-section">
    <div class="container">
      <div class="heading_container heading_center">
        <h2 class="sell-head">
          Welcome, {{username}}!
        </h2>
      </div>
      <form action="/listing" method="GET">
        <input id="list_item" type="submit" class="btn btn-block" value="List A Product">   
      </form>
    </div>
    {{#if count}}
      <div id="page_products">
      <h2 style="color:#434f78; padding-top:1%">Your Products:</h2>
      <ol class="product_list">
        {{#each names}}
        <li>{{this}}</li>
        {{/each}}
      </ol>
      </div>
    {{/if}}
  </section>
 <!-- end seller section -->

  <!-- info section -->
  {{>footer}}

  <!-- end info_section -->

  <!-- jQery -->
  <script src="js/jquery-3.4.1.min.js"></script>
  <!-- bootstrap js -->
  <script src="js/bootstrap.js"></script>



</body>

</html>